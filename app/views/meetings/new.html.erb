<div id="text">

<% if logged_in? -%>

<h1>Create a new meeting</h1>

<% form_for(@meeting) do |f| %>
  <%= f.error_messages %>
*Required Fields

  <p>
    <%= f.label :title, "*Meeting Title" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :agenda, "Agenda" %><br />
    <%= f.text_area :agenda %>
  </p>
Intended Time Frame for Meeting:
  <p>
    <%= f.label :start_date, "*Between" %><br />
    <%= f.date_select  :start_date %>
  </p>
  <p>
    <%= f.label :end_date, "*and" %><br />
    <%= f.date_select :end_date %>
  </p>
   <p>
  	<%= f.label :location, "Location" %><br />
  	<%= f.text_field :location %>
  </p>
    <p>
  	<%= f.label :attendees, "Attendees (Please enter email addresses separate by comma)" %><br />
  	<%= f.text_area :attendees %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', meetings_path %>

<% else -%>	

Please login to continue.

<% end -%>

</div>
